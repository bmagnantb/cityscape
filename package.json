{
  "name": "skylines",
  "version": "0.1.0",
  "description": "user-voted city skyline photo gallery",
  "main": "server.js",
  "scripts": {
    "start": "node server.js & npm run watch",
    "watch": "parallelshell 'npm run watch:css' 'npm run watchify:js'",
    "watch:css": "watch 'npm run build:css' ./public/scss/",
    "watchify:js": "watchify ./public/js/app.js --extension=.jsx -t babelify -o ./public/dist/app.js -v",
    "build:css": "node ./node_modules/.bin/node-sass ./public/scss/style.scss ./public/dist/style.css; csso ./public/dist/style.css ./public/dist/style.min.css; echo '------sassy------'",
    "ignores": "echo 'node_modules' > .gitignore; echo '.DS_Store' >> .gitignore; echo 'bower_components' >> .gitignore",
    "test": "mocha --compilers js:babel/register ./public/js/test/test.js; echo '------tested------'",
    "env": "env"
  },
  "dependencies": {
    "express": "latest",
    "parse": "latest",
    "request": "^2.53.0",
    "alt": "latest",
    "babel": "latest",
    "babelify": "latest",
    "bourbon": "latest",
    "browserify": "latest",
    "chai": "latest",
    "csso": "latest",
    "es5-shim": "latest",
    "jshint": "latest",
    "jquery": "latest",
    "mocha": "latest",
    "modernizr": "latest",
    "neat": "latest",
    "node-sass": "latest",
    "parallelshell": "latest",
    "react": "latest",
    "uglifyify": "latest",
    "watch": "latest",
    "watchify": "latest"
  },
  "browserify": {
    "extension": [
      ".js",
      ".jsx"
    ]
  },
  "author": "Ben Magnant-Brown",
  "license": "MIT"
}
