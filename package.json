{
  "name": "skylines",
  "version": "0.1.0",
  "description": "user-voted city skyline photo gallery",
  "main": "server.js",
  "engines": {
    "node": "0.12.0"
  },
  "scripts": {
    "start": "MONGO_URL='mongodb://localhost:27017/cityscape' API_URL='http://localhost:3000/api' node server.js & npm run watch",
    "watch": "parallelshell 'npm run watch:css'",
    "js": "'npm run watchify:js'",
    "watch:css": "watch 'npm run build:css' ./src/scss/",
    "watchify:js": "watchify ./src/js/client/app.js --extension=.jsx -t babelify -o ./build/app.js -v",
    "build:css": "node-sass ./src/scss/style.scss ./build/style.css; autoprefixer ./build/style.css; csso ./build/style.css ./build/style.min.css; echo '------sassy------'",
    "ignores": "echo 'node_modules' > .gitignore; echo '.DS_Store' >> .gitignore; echo 'modules_other' >> .gitignore; echo 'flickrKey.js' >> .gitignore",
    "test": "mocha --compilers js:babel/register ./src/js/test/test.js",
    "env": "env",
    "postinstall": "npm run ignores"
  },
  "dependencies": {
    "babel": "^5.4.3",
    "bluebird": "^2.9.24",
    "engine-lodash": "^0.6.3",
    "express": "^4.12.3",
    "lodash": "^3.7.0",
    "lodash-express": "0.0.2",
    "mongodb": "^2.0.27",
    "request": "^2.55.0",
    "superagent": "^1.2.0",
    "superagent-bluebird-promise": "^2.0.2"
  },
  "devDependencies": {
    "alt": "^0.15.5",
    "autoprefixer": "^5.1.0",
    "babel": "^5.1.9",
    "babelify": "^6.0.2",
    "chai": "^2.2.0",
    "chai-as-promised": "^5.0.0",
    "chai-things": "^0.2.0",
    "csso": "^1.3.11",
    "eslint": "^0.19.0",
    "jquery": "^2.1.3",
    "jsdom": "^3.1.2",
    "mocha": "^2.2.4",
    "node-sass": "^2.1.1",
    "parallelshell": "^1.1.1",
    "parse": "^1.4.2",
    "proxyquire": "^1.4.0",
    "react": "^0.13.1",
    "react-router": "^0.13.3",
    "sinon": "^1.14.1",
    "sinon-chai": "^2.7.0",
    "uglifyify": "^3.0.1",
    "watch": "^0.16.0",
    "watchify": "^3.1.1"
  },
  "browserify": {
    "extension": [
      ".js",
      ".jsx"
    ]
  },
  "author": "Ben Magnant-Brown",
  "license": "MIT"
}
