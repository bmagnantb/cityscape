{
  "name": "skylines",
  "version": "0.1.0",
  "description": "user-voted city skyline photo gallery",
  "main": "server.js",
  "engines": {
    "node": "0.12.0"
  },
  "scripts": {
    "start": "MONGO_URL='mongodb://localhost:27017/cityscape' node server.js & npm run watch",
    "watch": "parallelshell 'npm run watch:css' 'npm run watchify:js'",
    "watch:css": "watch 'npm run build:css' ./public/scss/",
    "watchify:js": "watchify ./public/js/app.js --extension=.jsx -t babelify -o ./public/dist/app.js -v",
    "build:css": "node-sass ./public/scss/style.scss ./public/dist/style.css; autoprefixer ./public/dist/style.css; csso ./public/dist/style.css ./public/dist/style.min.css; echo '------sassy------'",
    "ignores": "echo 'node_modules' > .gitignore; echo '.DS_Store' >> .gitignore; echo 'bower_components' >> .gitignore; echo 'modules_other' >> .gitignore; echo 'flickrKey.js' >> .gitignore",
    "test": "mocha --compilers js:babel/register ./public/js/test/test.js; echo '------tested------'",
    "env": "env",
    "postinstall": "npm run ignores"
  },
  "dependencies": {
    "bluebird": "^2.9.24",
    "mongodb": "^2.0.27",
    "express": "^4.12.3",
    "request": "^2.53.0"
  },
  "devDependencies": {
    "alt": "^0.15.5",
    "autoprefixer": "^5.1.0",
    "babel": "^5.1.9",
    "babelify": "^6.0.2",
    "chai": "^2.2.0",
    "chai-as-promised": "^5.0.0",
    "chai-things": "^0.2.0",
    "csso": "^1.3.11",
    "eslint": "^0.19.0",
    "jquery": "^2.1.3",
    "jsdom": "^4.4.0",
    "lodash": "^3.6.0",
    "mocha": "^2.2.4",
    "node-sass": "^2.1.1",
    "parallelshell": "^1.1.1",
    "parse": "^1.4.2",
    "proxyquire": "^1.4.0",
    "react": "^0.13.1",
    "sinon": "^1.14.1",
    "sinon-chai": "^2.7.0",
    "uglifyify": "^3.0.1",
    "watch": "^0.16.0",
    "watchify": "^3.1.1"
  },
  "browserify": {
    "extension": [
      ".js",
      ".jsx"
    ]
  },
  "author": "Ben Magnant-Brown",
  "license": "MIT"
}
